<div class="container">
    <div class="row">
    <form class="col s12">
     
   
      <div class="row">
        <div class="input-field col s12">
          <textarea id="push" class="materialize-textarea"></textarea>
          <label for="push">id for push film</label>
        </div>
      </div>
 <a class="waves-effect waves-light btn" id = "btnPush">push</a>
	  
      <div class="row">
        <div class="input-field col s12">
              <textarea  id="delete"  class="materialize-textarea"></textarea>
          <label for="delete">id for delete film</label>
        </div>
      </div>
	  
  <a class="waves-effect waves-light btn" id = "btnDelete">delete</a>     
      
    </form>
  </div>
 
  
</div>
<div id="result_form">
</div>
<script type="text/javascript" language="javascript">
$( document ).ready(function() {

    
    $("#btnPush").click(  function(){

	 var dataUs = {
		id:$("#push").val()
		}
		$.ajax({
        url:     "/pushElement", 
        type:     "POST", 
		

        data: dataUs,
       success: function(response) { //Данные отправлены успешно
        	if(response =="1"){
				
				$('#result_form').html("данные добавлены  успешно  "+dataUs.id);
		
			}
			else
        	$('#result_form').html("данные не добавлены ");
    	},
    	error: function(response) { // Данные не отправлены
            $('#result_form').html('Ошибка. Данные не отправлены.');
    	} 
		
		
 	   });
		
		
		}
	);
	
	$("#btnDelete").click(  function(){

	 var dataUs = {
		id:$("#delete").val()
		
		}
		$.ajax({
        url:     "/deleteElement", 
        type:     "POST", 
		

        data: dataUs,
       success: function(response) { //Данные отправлены успешно
        	if(response =="1"){
				
				$('#result_form').html("данные удалены  успешно  "+dataUs.id);
		
			}
			else
        	$('#result_form').html("данные не удалены ");
    	},
    	error: function(response) { // Данные не отправлены
            $('#result_form').html('Ошибка. Данные не отправлены.');
    	} 
		
		
 	   });
		
		
		}
	);
	
	
	
});
</script>